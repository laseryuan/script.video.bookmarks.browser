<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.video.bookmarks.browser" name="Video bookmarks browser XBMC script" version="1.1" provider-name="pilluli">
	<requires>
		<import addon="xbmc.python" version="2.0"/>
	</requires>
	<extension point="xbmc.python.library" library="default.py"/>
	<extension point="xbmc.addon.metadata">
		<summary>Video bookmarks browser script</summary>
		<description>Fetches Video bookmarks form xbmc to populate your home screen.</description>
		<disclaimer>Needs skin support for it to be used properly</disclaimer>
		<platform>all</platform>
	</extension>
</addon>
